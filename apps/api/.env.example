# ==================== DATABASE ====================
MONGODB_URI=mongodb://localhost:27017/smartduka
MONGODB_TEST_URI=mongodb://localhost:27017/smartduka-test

# ==================== JWT & SECURITY ====================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRY=30d

# ==================== FRONTEND ====================
FRONTEND_URL=http://localhost:3000

# ==================== SMTP EMAIL CONFIGURATION ====================
# Email sending is disabled if SMTP_HOST, SMTP_USER, or SMTP_PASS are not set
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=SmartDuka <noreply@smartduka.co.ke>

# Gmail: Use App Password (not regular password)
# Outlook: Use your email and password
# SendGrid: SMTP_HOST=smtp.sendgrid.net, SMTP_USER=apikey, SMTP_PASS=SG.xxxxx
# AWS SES: SMTP_HOST=email-smtp.region.amazonaws.com, SMTP_PORT=587

# ==================== M-PESA CONFIGURATION ====================
# Get credentials from: https://developer.safaricom.co.ke/
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your-passkey
# For development: Use ngrok to expose local server (pnpm ngrok:start)
# Example: https://xxxx-xx-xx-xx-xx.ngrok-free.app/payments/mpesa/callback
MPESA_CALLBACK_URL=https://your-domain.com/payments/mpesa/callback
# Environment: 'sandbox' or 'production'
MPESA_ENV=sandbox
# Encryption key for storing M-Pesa credentials securely (64 hex chars = 32 bytes)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MPESA_ENCRYPTION_KEY=

# ==================== STRIPE CONFIGURATION ====================
# Get credentials from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ==================== ENCRYPTION ====================
# General encryption key (32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ==================== ENVIRONMENT ====================
NODE_ENV=development
LOG_LEVEL=debug

# ==================== NGROK (Development) ====================
# Get token from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=your-ngrok-auth-token

# ==================== REDIS (Optional) ====================
# Leave empty to use in-memory cache (development only)
# For production, use Redis Cloud, Upstash, or local Redis
# Examples:
#   Local: redis://localhost:6379
#   Cloud: redis://default:password@redis-12345.cloud.redislabs.com:12345
#   Upstash: rediss://default:password@us1-example-12345.upstash.io:6379
REDIS_URL=

# ==================== WHATSAPP CONFIGURATION ====================
# Provider: 'meta' or 'twilio'
WHATSAPP_PROVIDER=meta

# Meta Cloud API (Recommended)
# Get credentials from: https://developers.facebook.com/apps
META_WHATSAPP_TOKEN=
META_WHATSAPP_PHONE_ID=
META_WHATSAPP_APP_SECRET=
META_WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# Twilio API (Alternative)
# Get credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# Common WhatsApp Settings
WHATSAPP_SENDER_NUMBER=+254700000000

# ==================== AI REPORTS ====================
# Enable/disable AI report scheduler
AI_REPORTS_ENABLED=true
